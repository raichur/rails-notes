!!!
%html
%head
  %title Notes
  = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body

  %header
    - if user_signed_in?
      = link_to "Notes", root_path, id: "logo"
      = link_to "New Note", new_note_path, id: "new_note_btn"
      = link_to "Sign Out", destroy_user_session_path, method: :delete, id: "sign_out"
    - else
      = link_to "Notes", root_path, id: "logo"
      = link_to "Log In", new_user_session_path, id: "new_note_btn"
    %p.notice= notice
    %p.alert= alert

  = yield
